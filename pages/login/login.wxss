/* 容器 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* --- 未登录状态样式 --- */
.login-header {
  margin-top: 100rpx;
  margin-bottom: 80rpx;
  text-align: center;
}
.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}
.desc {
  font-size: 28rpx;
  color: #999;
}
.login-btn {
  width: 80%;
  background-color: #07c160;
  color: white;
  border-radius: 44rpx;
  font-weight: 500;
}

/* --- 已登录状态样式 --- */
.user-info-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 60rpx;
  margin-bottom: 60rpx;
}
.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.1);
}
.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.menu-list {
  width: 100%;
  background: white;
  border-radius: 16rpx;
  padding: 0 30rpx;
  margin-bottom: 60rpx;
}
.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 30rpx;
  color: #333;
}
.menu-item:last-child {
  border-bottom: none;
}
.version {
  color: #999;
}

.logout-btn {
  width: 80%;
  background-color: #fff;
  color: #ff4d4f; /* 红色文字 */
  border: 1rpx solid #ff4d4f;
  border-radius: 44rpx;
  font-weight: 500;
}

/* 登录页面样式 */
.login-page {
  min-height: 100vh;
  background: #f6f7f8;
  display: flex;
  flex-direction: column;
}

.header-banner {
  height: 120rpx;
  background: linear-gradient(90deg, #2b85e4, #00d2ff);
}

.main-card {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 40rpx;
}

.guide-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 80rpx;
}

.logo-box {
  margin-bottom: 60rpx;
}

.logo-emoji {
  font-size: 120rpx;
  display: inline-block;
}

.guide-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
  text-align: center;
}

.guide-desc {
  font-size: 26rpx;
  color: #999;
  text-align: center;
  display: block;
}

.action-box {
  margin-top: 60rpx;
}

.prominent-btn {
  width: 100% !important;
  height: 88rpx;
  background: linear-gradient(90deg, #2b85e4, #00d2ff) !important;
  color: #fff;
  border-radius: 16rpx;
  font-size: 30rpx;
}

.profile-section {
  display: flex;
  align-items: center;
  margin-bottom: 60rpx;
}

.avatar-wrap {
  position: relative;
  margin-right: 30rpx;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid #f0f7ff;
}

.online-indicator {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 24rpx;
  height: 24rpx;
  background: #00b578;
  border-radius: 50%;
  border: 4rpx solid #fff;
}

.user-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.user-nickname {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.status-tag {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #00b578;
}

.status-tag .dot {
  width: 12rpx;
  height: 12rpx;
  background: #00b578;
  border-radius: 50%;
  margin-right: 8rpx;
  display: inline-block;
}

.action-btn {
  width: 100% !important;
  height: 88rpx;
  border-radius: 16rpx;
  font-size: 30rpx;
}

.logout-btn {
  background: #ff5555 !important;
  color: #fff !important;
}

.footer-section {
  margin-top: 40rpx;
}

.divider {
  height: 1rpx;
  background: #eee;
  margin-bottom: 20rpx;
}

.exit-btn {
  width: 100% !important;
  height: 80rpx;
  color: #999;
  font-size: 28rpx;
}