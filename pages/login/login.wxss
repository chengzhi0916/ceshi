/* 容器 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* --- 未登录状态样式 --- */
.login-header {
  margin-top: 100rpx;
  margin-bottom: 80rpx;
  text-align: center;
}
.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}
.desc {
  font-size: 28rpx;
  color: #999;
}
.login-btn {
  width: 80%;
  background-color: #07c160;
  color: white;
  border-radius: 44rpx;
  font-weight: 500;
}

/* --- 已登录状态样式 --- */
.user-info-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 60rpx;
  margin-bottom: 60rpx;
}
.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.1);
}
.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.menu-list {
  width: 100%;
  background: white;
  border-radius: 16rpx;
  padding: 0 30rpx;
  margin-bottom: 60rpx;
}
.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 30rpx;
  color: #333;
}
.menu-item:last-child {
  border-bottom: none;
}
.version {
  color: #999;
}

.logout-btn {
  width: 80%;
  background-color: #fff;
  color: #ff4d4f; /* 红色文字 */
  border: 1rpx solid #ff4d4f;
  border-radius: 44rpx;
  font-weight: 500;
}